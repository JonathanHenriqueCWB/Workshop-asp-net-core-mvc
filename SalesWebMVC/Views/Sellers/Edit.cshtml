@model Seller
@{
    ViewData["Title"] = "Edit";
}

<h1>@ViewData["Title"]</h1>
<h4>Seller</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">

            <input type="hidden" asp-for="SellerId" />

            <div class="form-group">
                <label asp-for="Name" class="col-form-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BirthDate" class="col-form-label"></label>
                <input asp-for="BirthDate" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="BaseSalary" class="col-form-label"></label>
                <input asp-for="BaseSalary" class="form-control" />
            </div>

            <div id="Departments" class="form-group">
                <label>Departments:</label>
                <select asp-items="@ViewBag.Departments"
                        class="form-control" name="drpDepartments">
                    <option> -- SELECT -- </option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
            </div>

        </form>
    </div>
</div>

